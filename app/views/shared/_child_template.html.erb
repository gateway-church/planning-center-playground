<template id="child-template" class="hide">
  <div class="card-body">
    <button class="float-right close" type="button" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h3 class="card-title">Child</h3>
    <fieldset>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-4">
            <%= label_tag "First Name", nil, { for: "children[][timestamp][attributes][first_name]" } %>
            <%= text_field_tag "children[][timestamp][attributes][first_name]", nil, { class: "form-control", required: true } %>
            <div class="invalid-feedback">required</div>
          </div>
          <div class="col-md-4">
            <%= label_tag "last Name", nil, { for: "children[][timestamp][attributes][last_name]" } %>
            <%= text_field_tag "children[][timestamp][attributes][last_name]", nil, { class: "form-control", required: true } %>
            <div class="invalid-feedback">required</div>
          </div>
          <div class="col-md-2">
            <%= label_tag "Suffix", nil, { for: "children[][timestamp][included][name_prefix]" } %>
            <%= select_tag "children[][timestamp][included][name_prefix]", options_for_select(["Jr.", "Sr.", "PH.D.", "II", "III"]),  { include_blank: true, class: "form-control" } %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <%= label_tag "Birthday", nil, { for: "children[][timestamp][attributes][birthday]" } %>
            <%= date_field_tag "children[][timestamp][attributes][birthday]", nil, { class: "form-control datepicker", required: true } %>
            <div class="invalid-feedback">required</div>
          </div>
          <div class="col-md-4">
            <%= label_tag "Gender", nil, { for: "children[][timestamp][attributes][gender]" }%>
            <%= select_tag "children[][timestamp][attributes][gender]", options_for_select([["Male", "male"], ["Female", "female"]], nil), { prompt: "Select a gender", class: "form-control", required: true } %>
            <div class="invalid-feedback">required</div>
          </div>
          <div class="col-md-2">
            <%= label_tag "Grade", nil, { for: "children[][timestamp][attributes][grade]" }%>
            <%= select_tag "children[][timestamp][attributes][grade]", options_for_select([["Pre-k", "-1"], ["K", "K"], ["1st", "1"], ["2nd", "2"], ["3rd", "3"], ["4th", "4"], ["5th", "5"], ["6th", "6"], ["7th", "7"], ["8th", "8"], ["9th", "9"], ["10th", "10"], ["11th", "11"], ["12th", "12"]], nil), { include_blank: true, class: "form-control", required: true } %>
            <div class="invalid-feedback">required</div>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
</template>
